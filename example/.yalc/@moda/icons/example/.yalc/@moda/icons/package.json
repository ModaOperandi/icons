{
  "name": "@moda/icons",
  "version": "0.0.0-development-115548e2",
  "description": "Site-wide icon library for modaoperandi.com",
  "author": "dzucconi",
  "license": "MIT",
  "repository": "https://github.com/ModaOperandi/icons",
  "main": "dist/index.js",
  "browserslist": "> 0.25%, not dead",
  "scripts": {
    "build": "NODE_ENV=production yarn clean && yarn optimize && node scripts/build && yarn run compile",
    "clean": "rm -rf dist && rm -rf build",
    "compile": "tsc -p . && cp build/src/package.json dist/package.json",
    "deploy:local": "yarn predeploy && gh-pages -d example/build",
    "deploy": "gh-pages --repo https://$GH_TOKEN@github.com/ModaOperandi/icons.git -d example/build",
    "local:publish": "yalc publish",
    "optimize": "rm -rf build/svg && svgo src/svg -o build/svg --config=svgoconfig.yml",
    "predeploy": "cd example && yarn install && yarn run build",
    "release": "yarn build && cd dist && yarn publish",
    "semantic-release": "semantic-release",
    "start": "cd example && yarn start"
  },
  "peerDependencies": {
    "react": ">=16.2.0"
  },
  "release": {
    "pkgRoot": "dist"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
