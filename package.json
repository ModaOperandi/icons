{
  "name": "@moda/icons",
  "version": "0.0.0-development",
  "description": "Site-wide icon library for modaoperandi.com",
  "author": "dzucconi",
  "license": "MIT",
  "repository": "https://github.com/ModaOperandi/moda-icons",
  "main": "dist/index.js",
  "browserslist": "> 0.25%, not dead",
  "scripts": {
    "clean": "rm -rf dist && rm -rf build",
    "compile": "tsc -p . && cp build/src/package.json dist/package.json",
    "build": "NODE_ENV=production yarn clean && yarn optimize && node scripts/build && yarn run compile",
    "release": "yarn build && cd dist && yarn publish",
    "predeploy": "cd example && yarn install && yarn run build",
    "deploy": "gh-pages --repo https://$GH_TOKEN@github.com/ModaOperandi/moda-icons.git -d example/build",
    "deploy:local": "yarn predeploy && gh-pages -d example/build",
    "optimize": "rm -rf build/svg && svgo src/svg -o build/svg --config=svgoconfig.yml",
    "start": "cd example && yarn start",
    "semantic-release": "semantic-release"
  },
  "peerDependencies": {
    "react": ">=16.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@semantic-release/npm": "^5.1.13",
    "@types/react": "^16.9.2",
    "cross-env": "^5.1.4",
    "cz-conventional-changelog": "^3.0.2",
    "del": "^5.0.0",
    "fs-extra": "^8.1.0",
    "gh-pages": "2.1.1",
    "glob": "^7.1.4",
    "husky": "^3.0.4",
    "react": "^16.9.0",
    "react-dom": "^16.10.2",
    "semantic-release": "^15.13.21",
    "svgo": "^1.3.0",
    "typescript": "^3.5.3"
  },
  "release": {
    "pkgRoot": "dist"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
