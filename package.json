{
  "name": "moda-icons",
  "version": "0.0.0-development",
  "description": "Site-wide icon library for modaoperandi.com",
  "author": "dzucconi",
  "license": "MIT",
  "repository": "https://github.com/ModaOperandi/moda-icons",
  "main": "dist/index.js",
  "browserslist": "> 0.25%, not dead",
  "scripts": {
    "build": "NODE_ENV=production yarn optimize && node scripts/build",
    "release": "yarn build && cd dist && yarn publish",
    "predeploy": "cd example && yarn install && yarn run build",
    "deploy": "gh-pages --repo https://$GH_TOKEN@github.com/ModaOperandi/moda-icons.git -d example/build",
    "deploy:local": "yarn predeploy && gh-pages -d example/build",
    "optimize": "rm -rf src/svg && svgo source/svg -o src/svg --config=svgoconfig.yml",
    "start": "cd example && yarn start",
    "semantic-release": "semantic-release"
  },
  "peerDependencies": {
    "react": ">=16.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@semantic-release/npm": "^5.1.13",
    "cross-env": "^5.1.4",
    "cz-conventional-changelog": "^3.0.2",
    "del": "^5.0.0",
    "fs-extra": "^8.1.0",
    "gh-pages": "2.0.1",
    "glob": "^7.1.4",
    "husky": "^3.0.2",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "semantic-release": "^15.13.19",
    "svgo": "^1.3.0"
  },
  "release": {
    "plugins": [
      "@semantic-release/npm",
      {
        "pkgRoot": "dist"
      }
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
